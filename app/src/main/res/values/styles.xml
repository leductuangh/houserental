<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Level_Two_Color</item>
        <item name="colorPrimaryDark">@color/Level_Four_Color</item>
        <item name="colorAccent">@color/Level_Three_Color</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="drawerArrowStyle">@style/menu_arrow</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="screen_header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/Level_Four_Color</item>
    </style>

    <style name="menu_arrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/Level_One_Color</item>
        <item name="thickness">3dp</item>
        <item name="spinBars">true</item>
        <item name="barLength">30dp</item>
        <item name="arrowHeadLength">15dp</item>
        <item name="arrowShaftLength">30dp</item>
        <item name="drawableSize">30dp</item>

    </style>

</resources>
