<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Level_Two_Color</item>
        <item name="colorPrimaryDark">@color/Level_Four_Color</item>
        <item name="colorAccent">@color/Level_Three_Color</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="drawerArrowStyle">@style/menu_arrow</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="screen_header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/Level_Four_Color</item>
    </style>

    <style name="menu_arrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/Level_One_Color</item>
        <item name="thickness">3dp</item>
        <item name="spinBars">true</item>
        <item name="barLength">30dp</item>
        <item name="arrowHeadLength">15dp</item>
        <item name="arrowShaftLength">30dp</item>
        <item name="drawableSize">30dp</item>
    </style>

    <style name="normal_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/WhiteSmoke</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="normal_edit_text">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/DarkerGray</item>
        <item name="android:textColorHint">@color/LightGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="home_payment_button" parent="normal_button">
        <item name="android:textSize">@dimen/home_create_payment_button_text_size_dimen</item>
        <item name="android:padding">@dimen/home_create_payment_button_padding_dimen</item>
    </style>

    <style name="normal_text">
        <item name="android:textColor">@color/DarkerGray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="light_text">
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="header_text">
        <item name="android:textColor">@color/Level_Four_Color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="item_parent_header_text">
        <item name="android:textColor">@color/Level_One_Color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_parent_sub_header_text">
        <item name="android:textColor">@color/Level_One_Color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="item_child_header_text">
        <item name="android:textColor">@color/Level_Four_Color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_child_sub_header_text">
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
