<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fetchable_header_container">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="fetchable_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="fetchable_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/refresh_arrow</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="fetchable_spinner" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="fetchable_textwrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="fetchable_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="fetchable_last_updated" parent="fetchable_text">
        <item name="android:textStyle">normal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_below">@+id/fetchable_id_text</item>
    </style>

    <declare-styleable name="FetchableView">
        <attr name="isFetchable" format="boolean" />
        <attr name="isRefreshable" format="boolean" />
        <attr name="limit" format="integer" />
    </declare-styleable>

</resources>