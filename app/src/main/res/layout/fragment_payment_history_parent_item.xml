<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Level_Two_Color"
    android:orientation="vertical"
    android:padding="10dp">

    <com.example.houserental.function.view.HouseRentalTextView
        android:id="@+id/fragment_payment_history_parent_item_tv_name"
        style="@style/item_parent_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toStartOf="@+id/fragment_payment_history_parent_item_tv_count"
        android:gravity="center_vertical|start"
        android:padding="10dp" />

    <com.example.houserental.function.view.HouseRentalTextView
        android:id="@+id/fragment_payment_history_parent_item_tv_count"
        style="@style/item_parent_sub_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|end"
        android:padding="10dp" />

</RelativeLayout>