<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:minWidth="450dp"
    android:orientation="vertical">

    <com.example.houserental.function.view.HouseRentalTextView
        style="@style/screen_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text="@string/common_user_choose_dob" />

    <DatePicker
        android:id="@+id/fragment_user_insert_dp_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:datePickerMode="calendar" />

    <com.example.houserental.function.view.HouseRentalButton
        android:id="@+id/fragment_user_insert_bt_dob_ok"
        style="@style/normal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_ok" />

</LinearLayout>