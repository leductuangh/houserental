<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Level_One_Color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_room_title" />

            <Spinner
                android:id="@+id/fragment_user_edit_sn_room"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dialog" />

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_id_title" />

            <com.example.houserental.function.view.HouseRentalEditText
                android:id="@+id/fragment_user_edit_et_id"
                style="@style/normal_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/user_insert_id_hint"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="12"
                android:nextFocusForward="@+id/fragment_user_edit_et_name" />

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_name_title" />

            <com.example.houserental.function.view.HouseRentalEditText
                android:id="@+id/fragment_user_edit_et_name"
                style="@style/normal_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/user_insert_name_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="30" />

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_dob_title" />

            <com.example.houserental.function.view.HouseRentalEditText
                android:id="@+id/fragment_user_edit_et_dob"
                style="@style/normal_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/user_insert_dob_hint"
                android:imeOptions="flagNavigateNext"
                android:inputType="none"
                android:maxLength="30" />

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_gender_title" />

            <com.example.houserental.function.view.HouseRentalButton
                android:id="@+id/fragment_room_edit_bt_gender"
                style="@style/normal_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />


            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_registered_title" />

            <com.example.houserental.function.view.HouseRentalButton
                android:id="@+id/fragment_room_edit_bt_registered"
                style="@style/normal_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_career_title" />

            <Spinner
                android:id="@+id/fragment_user_edit_sn_career"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dialog" />

            <com.example.houserental.function.view.HouseRentalTextView
                style="@style/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/user_phone" />

            <com.example.houserental.function.view.HouseRentalEditText
                android:id="@+id/fragment_user_edit_et_phone"
                style="@style/normal_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/user_insert_phone_hint"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.example.houserental.function.view.HouseRentalButton
                    android:id="@+id/fragment_user_edit_bt_save"
                    style="@style/normal_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/common_save" />

                <com.example.houserental.function.view.HouseRentalButton
                    android:id="@+id/fragment_user_edit_bt_cancel"
                    style="@style/normal_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/common_cancel" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>