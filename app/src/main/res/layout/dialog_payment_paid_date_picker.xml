<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/normal_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.houserental.function.view.HouseRentalTextView
        style="@style/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/common_setting_choose_paid_date" />

    <DatePicker
        android:id="@+id/fragment_payment_paid_date_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:datePickerMode="calendar" />

    <com.example.houserental.function.view.HouseRentalButton
        android:id="@+id/fragment_payment_paid_date_bt_ok"
        style="@style/normal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_ok" />

</LinearLayout>