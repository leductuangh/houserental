<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/common_owner_title" />

                <Spinner
                    android:id="@+id/fragment_setting_sn_owner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />

                <Button
                    android:id="@+id/fragment_setting_bt_add_owner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/setting_owner_item_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/setting_room_type_title" />

                <ListView
                    android:id="@+id/fragment_setting_lv_room_type"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/common_electric_price_title" />

                <EditText
                    android:id="@+id/fragment_setting_et_electric"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:hint="@string/setting_insert_electric_hint"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColorHint="@color/Red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/common_water_price_title" />

                <EditText
                    android:id="@+id/fragment_setting_et_water"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:hint="@string/setting_insert_water_hint"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColorHint="@color/Red" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/common_waste_price_title" />

                <EditText
                    android:id="@+id/fragment_setting_et_waste"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:hint="@string/setting_insert_waste_hint"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColorHint="@color/Red" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:text="@string/common_device_price_title" />

                <EditText
                    android:id="@+id/fragment_setting_et_device"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:hint="@string/setting_insert_device_hint"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColorHint="@color/Red" />

            </LinearLayout>

            <Button
                android:id="@+id/fragment_setting_bt_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/common_save" />

            <Button
                android:id="@+id/fragment_setting_bt_backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/common_backup" />

            <Button
                android:id="@+id/fragment_setting_bt_restore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/common_restore" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>