<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.houserental"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.example.houserental.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.example.houserental.permission.C2D_MESSAGE" />

    <application
        android:name=".function.HouseRentalApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".function.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="AA_DB_NAME"
            android:value="@string/database_name" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="3" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="com.example.houserental.data.serializer.HashMapSerializer,com.example.houserental.data.serializer.MapSerializer,com.example.houserental.data.serializer.BooleanArraySerializer,com.example.houserental.data.serializer.IntegerArraySerializer,com.example.houserental.data.serializer.DoubleArraySerializer,com.example.houserental.data.serializer.StringArraySerializer" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.houserental.function.model.RoomTypeDAO, com.example.houserental.function.model.OwnerDAO, com.example.houserental.function.model.PaymentDAO,com.example.houserental.function.model.DeviceDAO,com.example.houserental.function.model.FloorDAO,com.example.houserental.function.model.RoomDAO,com.example.houserental.function.model.UserDAO" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.example.houserental" />
            </intent-filter>
        </receiver>

        <service
            android:name="core.util.notification.NotificationService"
            android:enabled="true" />

        <service
            android:name="core.util.gcm.GcmRegistrationService"
            android:exported="false" />

        <service
            android:name="core.util.gcm.GcmService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <service
            android:name="core.util.gcm.GcmInstanceIdListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

    </application>

</manifest>